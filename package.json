{
  "name": "@animini/root",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "validate": "preconstruct validate",
    "lint": "pretty-quick --staged",
    "release": "pnpm build && pnpm changeset publish",
    "tsc": "tsc --noEmit",
    "size": "pnpm size-limit",
    "test:size": "pnpm build && pnpm size",
    "prepare": "husky install",
    "demo:dev": "pnpm --filter demo run dev",
    "test:perf": "jest ./perf/tests/perf.*.js",
    "test:bench": "jest ./perf/tests/bench.*.js"
  },
  "size-limit": [
    {
      "name": "core",
      "import": "{ useAniminiCore }",
      "limit": "2.5 KB",
      "path": "packages/core/dist/*.prod.js"
    },
    {
      "name": "dom",
      "import": "{ useAnimini }",
      "limit": "4 KB",
      "path": "packages/dom/dist/*.prod.js"
    },
    {
      "name": "three",
      "import": "{ useAnimini }",
      "limit": "3.5 KB",
      "path": "packages/three/dist/*.prod.js",
      "ignore": [
        "three",
        "@react-three/fiber"
      ]
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dbismut/animini.git"
  },
  "bugs": "https://github.com/dbismut/animini/issues",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.18.0",
    "@babel/preset-env": "^7.18.0",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.17.12",
    "@changesets/cli": "^2.22.0",
    "@preconstruct/cli": "^2.1.5",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.4",
    "@typescript-eslint/eslint-plugin": "^5.26.0",
    "@typescript-eslint/parser": "^5.26.0",
    "all-contributors-cli": "^6.20.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.16.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "pnpm": "^7.1.3",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "size-limit": "^7.0.8",
    "tsd": "^0.20.0",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "printWidth": 120,
    "tabWidth": 2,
    "useTabs": false,
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "bracketSpacing": true,
    "bracketSameLine": false,
    "fluid": false
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@animini/.*-latest)/)"
    ]
  }
}
