{
  "name": "@animini/root",
  "version": "0.0.1",
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "demo",
    "perf"
  ],
  "preconstruct": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "preconstruct build",
    "watch": "preconstruct watch",
    "dev": "preconstruct dev",
    "validate": "preconstruct validate",
    "lint": "pretty-quick --staged",
    "release": "yarn build && yarn changeset publish",
    "tsc": "tsc --noEmit",
    "size": "yarn size-limit",
    "demo:dev": "yarn workspace demo dev",
    "test:perf": "jest ./perf/tests/perf.*.js",
    "test:bench": "jest ./perf/tests/bench.*.js"
  },
  "size-limit": [
    {
      "name": "core",
      "limit": "2 KB",
      "path": "packages/core/dist/*.prod.js"
    },
    {
      "name": "dom",
      "limit": "3 KB",
      "path": "packages/dom/dist/*.prod.js"
    },
    {
      "name": "three",
      "limit": "2.5 KB",
      "path": "packages/three/dist/*.prod.js",
      "ignore": [
        "three",
        "@react-three/fiber"
      ]
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/dbismut/animini.git"
  },
  "bugs": "https://github.com/dbismut/animini/issues",
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "devDependencies": {
    "@babel/core": "^7.17.10",
    "@babel/preset-env": "^7.17.10",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@changesets/cli": "^2.22.0",
    "@preconstruct/cli": "^2.1.5",
    "@size-limit/preset-small-lib": "^7.0.8",
    "@types/react": "^18.0.5",
    "@types/react-dom": "^17.0.3",
    "@typescript-eslint/eslint-plugin": "^5.23.0",
    "@typescript-eslint/parser": "^5.23.0",
    "all-contributors-cli": "^6.20.0",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.15.0",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-flowtype": "^8.0.3",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.29.4",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "prettier": "^2.6.2",
    "pretty-quick": "^3.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^7.0.8",
    "tsd": "^0.20.0",
    "typescript": "^4.6.4"
  },
  "prettier": {
    "semi": false,
    "trailingComma": "es5",
    "singleQuote": true,
    "jsxBracketSameLine": true,
    "tabWidth": 2,
    "printWidth": 120
  },
  "jest": {
    "transformIgnorePatterns": [
      "node_modules/(?!(@animini/.*-latest)/)"
    ]
  }
}
